<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#FFF"
    android:gravity="center"
    tools:context=".FragmentAbout">

    <TextView
        android:id="@+id/judul_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tentang Aplikasi"
        android:textSize="40sp"
        android:textColor="@color/blue_500"
        android:textStyle="bold"
        android:fontFamily="times new roman">
    </TextView>

    <ImageView
        android:id="@+id/gambar"
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/makanan">
    </ImageView>

    <TextView
        android:id="@+id/penjelasan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:text="Aplikasi ini dibuat untuk memenuhi Tugas Mata Kuliah Aplikasi Komputasi Begerak"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="times new roman">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Aplikasi Berfungsi untuk mencari tempat Makanan"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textAlignment="center"
        android:fontFamily="times new roman">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Versi Aplikasi 1.0"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="times new roman">
    </TextView>

</LinearLayout>